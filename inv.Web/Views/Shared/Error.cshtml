@model HandleErrorInfo
@using Invest.Common
@{
    ViewBag.Title = "Error";

    var header = MDA_Resource.Error_500;
    var message = MDA_Resource.Error_500_Description;

    if (ViewBag.StatusCode == 403)
    {
        header = MDA_Resource.Error_403;
        message = MDA_Resource.Error_403_Description;
    }

    if (ViewBag.StatusCode == 404)
    {
        header = MDA_Resource.Error_404;
        message = MDA_Resource.Error_404_Description;
    }
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h1 class="globalerror">@header</h1>
                </div>
                <div class="ibox-content">
                    <p class="globalerror" style="padding-top: 20px">
                        @if (message != null)
                        { @Html.Raw(message) }
                    </p>
                    <p style="padding-top: 20px">Click <a id="lnkBack" href="">here</a> to go back.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#lnkBack').click(function (e) {
            e.preventDefault();
            history.back(1);
        });
    });
</script>
